Here is a standard widget library


 \begin{lstlisting}
////////////////////////////////////////////////
interface Button:
{
  click : activation in,
  text: text out
}

interaction (Button 
  (isactive: activation in) 
  named (name:text in) 
  trigerring (onClick:activation out)
):Button:
(bind (this) 
  (when (isactive) :
    (all
      ((onClick)   = (this.click))
      ((this.text) = (name)) 
    )
  )
)
////////////////////////////////////////////////
interface SegmentedSwitch:
{
  selection : number in,
  choices : [text] out
}

interaction (SegmentedSwitch
  (isactive: activation in) 
  with choices (choices:[text] in)
  selected (selected:number out)
):SegmentedSwitch:
  (bind (this)
    (when (isactive) :
      (all
        ((this.choices)=(choices))
        ((selected)
      )
    )
  )
////////////////////////////////////////////////
interface Slider:
{
  selection : number in,
  feedback : number out
}

interaction (Slider
  (isactive: activation in)
  min (min:number in)
  max (max:number in)
  selected (selected:number out)
  feedback (feedback:number in)
):Slider:
()

////////////////////////////////////////////////
interface Gauge:
{
  value : number out
}

interaction (Gauge
  (isactive: activation in)
  displaying (value: number in)
):Gauge:
()
////////////////////////////////////////////////
interface Label:
{
  value : text out
}

interaction (Label
  (isActive: activation in)
  with value (value: text in)
):Label:

  interaction this:(variable(unique))
  
  (bind (this)
    (when (isActive) :
      ((this.value)=(value))
    )
  )

////////////////////////////////////////////////

\end{lstlisting}


